// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email    String       @id
  password String
  profile  UserProfile?
}

model UserProfile {
  email String @unique

  firstName String
  lastName  String
  course    String
  position  String

  credentials User @relation(fields: [email], references: [email])
}
